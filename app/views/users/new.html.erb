<div class="max-w-md mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-6">Create Account</h1>

  <%= form_with model: @user, local: true, class: "space-y-4" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <h4 class="text-red-800 font-medium">Please fix the following errors:</h4>
        <ul class="mt-2 text-sm text-red-600">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
           <!-- other user fields like name, email etc. -->
      <div class="field">
        <%= form.label :avatar %>
        <%= form.file_field :avatar %>
      </div>
      <%= form.submit %>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium" %>
      <%= form.text_field :name, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium" %>
      <%= form.email_field :email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-medium" %>
      <%= form.password_field :password, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :password_confirmation, class: "block text-sm font-medium" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <%= form.fields_for :account do |account_fields| %>
      <div>
        <%= account_fields.label :name, "Display Name", class: "block text-sm font-medium" %>
        <%= account_fields.text_field :name, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
      </div>

      <div>
        <%= account_fields.label :handle, "Username", class: "block text-sm font-medium" %>
        <%= account_fields.text_field :handle, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md", placeholder: "username" %>
        <p class="text-xs text-gray-500 mt-1">Letters, numbers, and underscores only</p>
      </div>

      <div>
        <%= account_fields.label :bio, class: "block text-sm font-medium" %>
        <%= account_fields.text_area :bio, class: "w-full px-3 py-2 border border-gray-300 rounded-md", rows: 3, placeholder: "Tell us about yourself..." %>
      </div>
    <% end %>

    <div>
      <%= form.submit "Create Account", class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>

  <p class="mt-4 text-center">
    Already have an account? <%= link_to "Sign in", new_session_path, class: "text-blue-500 hover:underline" %>
  </p>
</div>
