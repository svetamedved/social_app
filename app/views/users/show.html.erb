<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center space-x-4">
      <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center text-white text-xl font-bold">
        <%= @user.name.first.upcase %>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @user.name %></h1>
        <p class="text-gray-600"><%= @user.email %></p>
      </div>
    </div>

    <% if @user.account %>
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-gray-900">Account Profile</h2>
        <div class="mt-2">
          <p><strong>Display Name:</strong> <%= @user.account.name %></p>
          <p><strong>Handle:</strong> @<%= @user.account.handle %></p>
          <% if @user.account.bio.present? %>
            <div class="mt-4">
              <strong>Bio:</strong>
              <p class="mt-1 text-gray-700"><%= simple_format(@user.account.bio) %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded">
        <p class="text-yellow-800">No account profile created yet.</p>
      </div>
    <% end %>
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar.variant(resize_to_limit: [100, 100]) %>
    <% else %>
      <%= image_tag 'default_avatar.png', size: "100x100" %>
    <% end %>
  </div>
</div>
